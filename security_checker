# ğŸ“± PHONE NUMBER SECURITY CHECKER
# =============================================
def check_phone_security(phone):
    print(f"\n{Colors.CYAN}{Colors.BOLD}ğŸ“± CHECKING PHONE: {phone}{Colors.END}")
    print(f"{Colors.WHITE}{'='*60}{Colors.END}")
    
    try:
        # Simulate phone breach check (using external service)
        phone_hash = hashlib.sha256(phone.encode()).hexdigest()[:16]
        
        # Mock API call simulation
        time.sleep(2)
        
        # Simulate random result for demo (in real tool, use actual API)
        import random
        if random.random() < 0.3:  # 30% chance of being "hacked"
            print(f"{Colors.RED}âŒ HACKED - Phone number found in data leaks{Colors.END}")
            print("   ğŸ“› Found in: Mobile Carrier Breach 2023")
            return "HACKED"
        else:
            print(f"{Colors.GREEN}âœ… NO HACK - Phone number appears secure{Colors.END}")
            return "NO HACK"
            
    except Exception as e:
        print(f"{Colors.RED}âŒ Error checking phone: {e}{Colors.END}")
        return "ERROR"

# =============================================
# ğŸŒ IP ADDRESS SECURITY CHECKER
# =============================================
def check_ip_security(ip):
    print(f"\n{Colors.CYAN}{Colors.BOLD}ğŸŒ CHECKING IP: {ip}{Colors.END}")
    print(f"{Colors.WHITE}{'='*60}{Colors.END}")
    
    try:
        # Get IP information
        response = requests.get(f"http://ip-api.com/json/{ip}", timeout=10)
        data = response.json()
        
        if data['status'] == 'success':
            print(f"ğŸ“ Location: {data['city']}, {data['country']}")
            print(f"ğŸ¢ ISP: {data['isp']}")
            
            # Check if IP is suspicious (mock check)
            suspicious_ips = ['192.168.1.1', '10.0.0.1', '127.0.0.1']
            if ip in suspicious_ips:
                print(f"{Colors.YELLOW}âš ï¸  SUSPICIOUS - Internal/Private IP{Colors.END}")
                return "SUSPICIOUS"
            else:
                print(f"{Colors.GREEN}âœ… NO HACK - IP appears clean{Colors.END}")
                return "NO HACK"
        else:
            print(f"{Colors.RED}âŒ HACKED - Invalid or malicious IP detected{Colors.END}")
            return "HACKED"
            
    except Exception as e:
        print(f"{Colors.RED}âŒ Error checking IP: {e}{Colors.END}")
        return "ERROR"

